<%= form_for @user, url: step3_informations_path, method: :get do |f| %>
      <div class='field-label'>
            <%= f.label "郵便番号"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :postal_code, autofocus: true%>
          </div>

          <div class='field-label'>
            <%= f.label "都道府県"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :prefecture, autofocus: true%>
          </div>

          <div class='field-label'>
            <%= f.label "市町村・番地"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :city, autofocus: true%>
          </div>

          <div class='field-label'>
            <%= f.label "建物名"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :building, autofocus: true%>
          </div>

      <%= f.submit 'Continue' %>
<% end %>