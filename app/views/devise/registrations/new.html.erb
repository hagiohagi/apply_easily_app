<div class="header">
  <div class="title">
  応募者エントリーページ
  </div>
</div>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>管理人用<p>アカウント登録</p></h2>
      <h5>管理人用アカウントを新規登録</h5>
      <%= render "devise/shared/links"%>
    </div>
    <div class='account-page__inner--right user-form'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label "姓"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :firstname, autofocus: true, id: 'registration_firstname'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label "名"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :lastname, autofocus: true, id: 'registration_lastname'%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label "メールアドレス"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, id: 'registration_email'%>
          </div>
        </div>


        <div class='field'>
          <div class='field-label'>
            <%= f.label "パスワード"%>
            <i>(英数字8文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", id: 'registration_password'%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label "パスワード"%>
            <i>(確認用)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", id: 'registration_password_confirmation' %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "登録", name:"commit", class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>